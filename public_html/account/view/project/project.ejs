<!-- views/project/project.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Project Details</title>
    <link id="cssFile" rel="stylesheet" type="text/css" href="/public_html/account/view/project/project.css">
    <!-- Modal Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body data-project-id="<%= project.projectId %>">
    <h1>Project Details</h1>
    <p>Project ID: <%= project.projectId %></p>
    <h2>CodeMirror!</h2>
    <br>
    <!-- Trigger the modal with a button -->
    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Invite User</button>
    
    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
        
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Invite User</h4>
            </div>
            <div class="modal-body">
            <form onsubmit="inviteUser(event)">
                <label for="inviteeUsername">Enter the username:</label>
                <input type="text" id="inviteeUsername" name="inviteeUsername" value=""><br><br>
                <input type="submit" value="Invite User" id="inviteUser"><br><br>
                <p id="inviteResponse"></p>
            </form>
            </div>
            <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
        
        </div>
    </div>
    <br>
    <br>
    <div id="editor"></div>

    <input type="button" id="saveState" onclick="saveState()" value="Save State">
    <br>
    <br>
    <select id="states"></select>
    <input type="button" id="loadState" onclick="loadState()" value="Load State">
    <br>
    <script src="/public_html/account/view/project/codemirror/project.bundle.js"></script>
    <script type="module" src="/public_html/account/view/project/project.mjs"></script>
    <!-- <script src="/public_html/account/view/project/project.js"></script> -->
</body>
</html>
